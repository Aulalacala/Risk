@*@model Risk.Models.DatosTablaModel*@
@{
    ViewBag.Title = "KRISIndicators";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>KRISIndicators</h2>

<div class="panel Incidencias_lista_divPagina">
    <div class="panel-body">

        <!-- TITLE & BUTTONS -->
        <span class="title">SEARCH CRITERIA</span>

        <div id="botonera" class="pull-right">
            <a href="@Url.Action("KrisFicha", "KRIS", new { id = 0 })" class="btn btn-primary">NEW</a>
        </div>

        <div class="clearfix"></div>
        <div class="divider"></div>

        <!-- SEARCH FORM -->
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-12">

                <!-- DIVIDER -->
                <div class="divider-30"></div>

                <!-- ROW FILTER -->

                @using (Html.BeginForm("BusquedaKRIS", "Assign", FormMethod.Post))
                {
                    <div class="row row-no-padding">
                        <div class="col-lg-2 col-md-2">
                            <span class="form-left-label" id="labelFilters">Filters</span>
                        </div>

                        <div class="col-lg-8 col-md-8">
                            <input type="text" class="form-control w90" name="filtro" id="filtro"/>
                        </div>

                        <div class="col-lg-2 col-md-2">
                            <input type="button" class="btn btn-primary" name="BtnBuscarKRIS" value="SEARCH" id="BtnBuscarKRIS" />
                        </div>
                    </div>
                }

                <div class="divider-20"></div>
            </div>
        </div>
    </div>

    <!-- RESULTS -->
    <div class="panel">
        <div class="panel-body">
            <!-- RESULTS TABLE -->
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <!-- DIVIDER -->
                    <div class="divider-30"></div>
                    <!-- TABLE DIV -->
                </div>
                <div>
                    <div id="tablaKRISDiv" class="divDelGrid center-block table-responsive" style="width:95%">
                    </div>
                </div>
                <!-- END RESULTS -->
            </div>
        </div> <!-- END TABLE DIV -->


    </div> <!-- END RESULTS TABLE -->
</div>

<script>
    $(document).ready(function () {
        var ruta2 = "http://localhost:1525/Assign/BusquedaKRIS";
        $('#tablaKRISDiv').load(ruta2);

        $('#BtnBuscarKRIS').click(function () {
            var ruta2 = "http://localhost:1525/Assign/BusquedaKRIS";

            $('#tablaKRISDiv').load(ruta2, { "Indicador": $('#filtro').val() });
        });

    });
</script>