@model Risk.ViewModels.FichaRiesgoVM

<form id="miForm">
    <div id="botonera" class="pull-right">
        <input type="submit" class="btn btn-primary" name="BtnDelete" value="DELETE" id="BtnDelete" />
        <a href="@Url.Action(" RiskFicha", "Risk", new { id = 0 })" class="btn btn-primary">NEW</a>
        <input type="button" class="btn btn-primary" name="BtnSave" value="SAVE" id="BtnSave" />
        <input type="button" class="btn btn-primary" name="BtnChange" value="CHANGE" id="BtnChange" />
        <input type="button" class="btn btn-primary" name="BtnCopyLast" value="COPY LAST" id="BtnCopyLast" />
    </div>
    <div class="clearfix"></div>
    <div class="divider"></div>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <br />
            <div style="background-color:#eaf7fa; height:500px;">
                <div class="divDelGrid center-block table-responsive" id="contenidoTabla" style="width:87%">
                    @Html.Partial("~/Views/PartialViews/TablaDatos.cshtml", Model.datosTabla_VM)
                </div>
            </div>



            <div class="divider"></div>
            <br /><br />
        </div>
        <div class="col-lg-12 col-md-12">
            @*<div class="col-lg-8 col-md-8">
                    @Html.Partial("FinancialImpactTextBox", Model)
                </div>*@
            <div style="background-color:#eaf7fa;">
                <div class="col-lg-8 col-md-8">
                    @Html.Partial("FinancialImpactCombosHelpers", Model)
                </div>

                <div class="col-lg-4 col-md-4" style="background-color:#eaf7fa; height:190px">
                   <br /><br />
                    <div class="col-lg-3 col-md-3">
                        <span class="form-left-label"><b>Frecuency: </b></span><br />
                    </div>
                    <div class="col-lg-9 col-md-9">
                        <div>
                            @Html.DropDown(Model.dropDowns.datosEvaEfectividad, "efectividad", "tEva_Efectividad", Model.qRiesgosEvalVal_VM.IdEfectividad.ToString(), null, null)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>


