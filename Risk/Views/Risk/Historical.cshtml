@model Risk.ViewModels.FichaRiesgoVM

<input type="hidden" id="idRiesgo" value="@Convert.ToInt32(Model.qRiesgosNombre_VM.IdRiesgo)" />

<form id="miForm">
    <div id="botonera" class="pull-right">
        <input type="submit" class="btn btn-primary" name="BtnDelete" value="DELETE" id="BtnDelete" disabled/>
        <a href="@Url.Action(" RiskFicha", "Risk", new { id = 0 })" class="btn btn-primary">NEW</a>
        <input type="button" class="btn btn-primary" name="BtnSave" value="SAVE" id="BtnSave" disabled />
        <input type="button" class="btn btn-primary" name="BtnChangeHistorical" value="CHANGE" id="BtnChangeHistorical" disabled />
        <input type="button" class="btn btn-primary" name="BtnCopyLast" value="COPY LAST" id="BtnCopyLast" />
    </div>
    <div class="clearfix"></div>
    <div class="divider"></div>
    <div class="row">
        <!--TABLA DE EVALUACIONES-->
        <div class="col-lg-12 col-md-12">
            <br />
            <div style="background-color:#eaf7fa; height:500px;">
                <div class="divDelGrid center-block table-responsive" id="datosTablaEvaluaciones" style="width:87%">
                    @Html.Partial("~/Views/PartialViews/TablaDatos.cshtml", Model.datosTabla_VM)
                </div>
            </div>
            <div class="divider"></div>
            <br /><br />
        </div>

        <!--FINANCIAL IMPACT-->
        <div class="col-lg-12 col-md-12" id="financialHistoricalDiv" style="display:none">
            <div style="background-color:#eaf7fa;">
                <div class="col-lg-8 col-md-8" id="financialImpactDiv">
                    @Html.Partial("FinancialImpactCombosHelpers", Model)
                </div>

                <div class="col-lg-4 col-md-4" style="background-color:#eaf7fa; height:177px">
                    <br /><br />

                    <!--ACTIVA-->
                    <div class="row">
                        <div class="col-lg-3 col-md-3">
                            <span class="form-left-label"><b>Active: </b></span><br />
                        </div>
                        <div class="col-lg-9 col-md-9">
                            <div>
                                @{ 
                                    var activo = true;
                                    if (Model.idEvaluacion != 0)
                                    {
                                        activo = Model.qRiesgosEvalVal_Dic_VM.Values.Where(x => x.IdEvaluacion == Model.idEvaluacion).Select(x => x.Activa).Single().ToString() == "True" ? true : false;
                                    }
                                }

                                @Html.CheckBox("checkActiva", activo , new { id = "checkActiva", @class = "checkbox" })
                            </div>
                        </div>
                    </div>

                    <!--EFECTIVIDAD-->
                    <div class="row">
                        <div class="col-lg-3 col-md-3">
                            <span class="form-left-label"><b>Efectivity: </b></span><br />
                        </div>
                        <div class="col-lg-9 col-md-9">
                            <div>
                                @Html.DropDown(Model.dropDowns.datosEvaEfectividad, "efectividad", "tEva_Efectividad", Model.qRiesgosEvalVal_Dic_VM.Values.Select(r => r.IdEfectividad).ToString(), null, null)
                            </div>
                        </div>
                    </div>

                    <!--FECHA-->
                    <div class="row">
                        <div class="col-lg-3 col-md-3">
                            <span class="form-left-label"><b>Date: </b></span><br />
                        </div>
                        <div class="col-lg-9 col-md-9">
                            <div id="divFechaEvaluacion" class="input-group">
                                <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                                <input type="text" class="form-control" data-date-format="mm/dd/yyyy">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript" src="~/Content/js/botoneraPartials.js"></script>
<script type="text/javascript" src="~/Content/js/bootstrap/bootstrap-datepicker.min.js"></script>


<script>
    $('#divFechaEvaluacion input').datepicker({
        todayHighlight: true
    })
    
    $('#datosTablaEvaluaciones table').attr('id', 'datosTablaEvaluaciones');
    var table = $('table[id=datosTablaEvaluaciones]').DataTable({
        //responsive: true,
        scrollY: 1000,
        scrollX: true,
        scrollCollapse: true,
        scroller: true,
        retrieve: true
    })

    $('#datosTablaEvaluaciones tbody').on('click', 'tr', function () {
        if ($(this).hasClass('selected')) {
            $(this).removeClass('selected');
        }
        else {
            table.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
        }

        var idEvaluacion = $(this).attr('id');
        var idRiesgo = $('#idRiesgo').val();
        //alert('idEvaluacion=> ' + idEvaluacion + 'idRiesgo => ' + idRiesgo);

        $('#financialHistoricalDiv').show();
        $('#BtnDelete').removeAttr('disabled');
        $('#BtnSave').removeAttr('disabled');
        $('#BtnChangeHistorical').removeAttr('disabled');

        $('#financialImpactDiv').empty();

        var ruta = "http://localhost:1525/Risk/FinancialImpactTextBox";
        $('#financialImpactDiv').load(ruta, { "id": idRiesgo, "idEvaluacion": idEvaluacion})
    });

</script>


