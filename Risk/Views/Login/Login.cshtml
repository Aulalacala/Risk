@model Risk.Models.tUsuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1" />
    <title>Login</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/css/responsive.css" type="text/css" media="screen" />

    <!-- ICONS -->
    <link rel="shortcut icon" href="~/Content/images/shared/favico.ico" />

</head>
<body>

    <!-- GLOBAL WRAPPER -->
    <div class="wrapper" id="login">


        <div class="text-center">

            <img src="~/Content/images/login/logo.png" class="logo" alt="Loan Pricing - Acceleris">

            <h1>Rating and Pricing Tool</h1>

            @if (ViewBag.errorNoExisteUsuario != null)
            {
                <label class="text-danger"> @ViewBag.errorNoExisteUsuario </label>
            }

            @if (ViewBag.errorUsuarioBloqueado != null)
            {
                <label class="text-danger"> @ViewBag.errorUsuarioBloqueado </label>
            }

            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="login-form text-left">
                    

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control w100", placeholder = "USER NAME" } } )
                    @Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control w100", placeholder = "PASSWORD" } })

                    <input type="submit" class="btn btn-primary" name="BtnEntrarLogin" value="ENTER" onclick="show_image()" id="BtnEntrarLogin"/>
                </div>

            }
            

        </div>


    </div> <!-- END WRAPPER -->

    <!-- SCRIPTS -->
    <script type="text/javascript" src="~/Content/js/jquery/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery/jquery.browser.min.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="~/Content/js/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/js/bootstrap/bootstrap-metis.menu.min.js"></script>
    <script type="text/javascript" src="~/Content/js/bootstrap/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="~/Content/js/mdetect/mdetect.js"></script>
    <script type="text/javascript" src="~/Content/js/fastclick/fastclick.js"></script>
    <script type="text/javascript" src="~/Content/js/scripts.js"></script>
</body>
</html>
